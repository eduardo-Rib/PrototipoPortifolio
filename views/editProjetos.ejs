<%- include('partials/headerAdm') %>

<h2>Projetos Acadêmicos</h2>

<div id="projetos-container">
  <% projetos.forEach(proj => { %>
    <section class="projeto-item">
      <h3><%= proj.titulo %></h3>
      <p><%= proj.descricao %></p>
      <div class="tech-stack">
        <% proj.tecnologias.forEach(tec => { %>
          <span class="tech-tag <%= tec.classe %>"><%= tec.nome %></span>
        <% }) %>
      </div>
      <a href="<%= proj.link %>" target="_blank" class="github-btn">Ver no GitHub</a>
      <button onclick="editItem(this)" class="edit" data-id="<%= proj.codigo %>">Editar</button>
      <button onclick="deleteItem(this)" class="delete" data-id="<%= proj.codigo %>">Excluir</button>
    </section>
  <% }) %>
</div>

<div class="form-inline">
  <h4>Adicionar Projeto</h4>
  <input id="titulo" type="text" placeholder="Título">
  <input id="descricao" type="text" placeholder="Descrição">
  <input id="tecnologias" type="text" placeholder="Tecnologias (separadas por vírgula)">
  <input id="link" type="text" placeholder="Link do GitHub">
  <button onclick="addProjeto()">Adicionar Projeto</button>
</div>

<script src="/js/editProjetos.js"></script> <!-- Certifique-se que esse JS exista -->